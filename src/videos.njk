---
pagination:
  data: collections.videos
  size: 2
  alias: list
  reverse: true
permalink: "videos/{% if pagination.pageNumber > 0 %}pagina-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "src/base.njk" %}

{% block head %}
    <title>PNUD Migración | Videos</title>
{% endblock %}

{% block content %}

        <!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">

                <!-- event-area-start -->
                <div class="event-area pt-60 pb-130">
                    <div class="container">

                        <div class="container clearfix">
                            <div class="heading-block center">

                                <img style="margin:2% auto;padding:2% 45%"  src="/elementos/NUESTRA ELECCION-09.png" alt="Canvas Logo">

                                <h2>Videos</h2>
                                
                            </div>
                        </div>

                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-12">
                                <div class="row">
                                {% if list%}
                                {% for item in list%}

                                <div class="col-lg-4 ">
                                    <div class="grid-inner">
                                        <iframe width="560" height="315" src="{{item.data.link}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                        <p>{{item.data.description}}</p>
                                    </div>
                                
                                </div>
                                {% endfor %}
                                {% endif %}
                               
                                </div>

                                <div class="d-flex justify-content-center">
                                    {% if pagination.href.previous %}
                                    <div class="mx-4">
                                        {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Videos más recientes</a>{% else %}←  Nuevos Videos{% endif %}
                                    </div>
                                    {% endif %}
                                    {% if pagination.href.next %}
                                    <div class="mx-4">
                                        {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Videos anteriores →</a>{% else %}Videos anteriores →{% endif %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </section>

{% endblock %}