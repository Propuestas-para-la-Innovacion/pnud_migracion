---
pagination:
  data: collections.novedades
  size: 6
  alias: list
  reverse: true
permalink: "novedades/{% if pagination.pageNumber > 0 %}pagina-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "src/base.njk" %}

{% block head %}
    <title>PNUD Migración | Novedades</title>
{% endblock %}

{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="slider-element" style="background-image:url('/elementos/PNUD-24.png');background-size:cover">
			<div class="container">
				<div class="row h-100 justify-content-center text-center my-6">
					<div class="col-lg-6  pt-5 pb-3 py-lg-6 mb-0 my-lg-4 text-center">
						<h2 class="titulo_estadisticas" style="font-size:45px;font-weight: 800">Lo último</h2>
					</div>

				</div>
			</div>
			<!--div class="bg-alt py-5">
				<div class="container">
					<div class="d-flex">
						<h4 class="mb-0"><span class="counter counter-inherit fw-normal text-white"><i class="icon-line-users icon-fw"></i> <span class="color fw-semibold" data-from="100" data-to="12462" data-refresh-interval="150" data-speed="2000"></span> Members Registered.</span></h4>
						<h4 class="mb-0 ms-5"><span class="counter counter-inherit fw-normal text-white"><i class="icon-line-message-circle icon-fw"></i> <span class="color fw-semibold" data-from="100" data-to="340333" data-refresh-interval="100" data-speed="2000"></span> Posts Created.</span></h4>
					</div>
				</div>
			</div-->
		</section>

        <!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">

                <!-- event-area-start -->
                <div class="event-area pt-60 pb-130">
                    <div class="container">

                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-12">
                                <div class="row">
                                {% if list%}
                                {% for item in list%}

                                <div class="col-md-4 col-lg-4 col-sm-12 my-4">
                                    <div class="cuadro_blog ">
                                        <a href="{{item.url}}"><img src="{{ item.data.image }}" alt="Evento" class="w-36"></a>
                                        <div class="px-4 py-4 text-left">
                                            <i class="fa-regular fa-calendar"></i><span class="text-sm">
                                            {{item.data.date | dateFormat('DD/MM/YYYY')}}
                                            </span><br>
                                            <br>
                                            <h5 class="font-bold text-lg">
                                            {{item.data.title }}
                                            </h5>
                                            
                                            <span class="text-sm">
                                            {{item.data.description}}
                                            </span>
                                            
                                        </div>
                                        <a href="{{item.url}}"><div class="px-4 pb-2 pt-2 text-left" style="border-top:#ccc 1px solid">
                                            <span>Ver más <i class="fa-solid fa-caret-right"></i></span>
                                        </div></a>

                                    </div>
                                </div>
                                {% endfor %}
                                {% endif %}
                               
                                </div>

                                <div class="d-flex justify-content-center">
                                    {% if pagination.href.previous %}
                                    <div class="mx-4">
                                        {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Novedades más recientes</a>{% else %}←  Nuevas Novedades{% endif %}
                                    </div>
                                    {% endif %}
                                    {% if pagination.href.next %}
                                    <div class="mx-4">
                                        {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Novedades anteriores →</a>{% else %}Novedades anteriores →{% endif %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </section>

{% endblock %}